<!DOCTYPE html>
html(lang="ru")
    head
        meta(charset="utf-8")
        title Регистрация
        include inc/head.pug
        include inc/css.pug
    body.inner.loading.full-width-page
        include inc/header.pug
        main#content
            .inner-content
                .inner-content__title
                    include mixins/title-block.pug
                    +titleBLock(["Capitol", "Регистрация"], false)
                .inner-content__content
                    .registration
                        .registration__soc
                            .soc
                                a.soc__link(href="#")
                                    <!-- /img/ico-vk.svg -->
                                    include ../img/ico-vk.svg
                                a.soc__link(href="#")
                                    <!-- /img/ico-fb.svg -->
                                    include ../img/ico-fb.svg
                            .registration__soc-text Вход в один клик
                        .registration__form
                            .reg-form
                                form(action="#")
                                    .form__inputs.form__inputs--3
                                        .form__inputs-input
                                            .default-input
                                                input.default-input__input(type="text" required="")
                                                label.default-input__label Фамилия
                                                .default-input__error
                                                    .error-text Ошибка
                                        .form__inputs-input
                                            .default-input
                                                input.default-input__input(type="text" required="")
                                                label.default-input__label Имя
                                                .default-input__error
                                                    .error-text Ошибка
                                        .form__inputs-input
                                            .default-input
                                                input.default-input__input(type="text")
                                                label.default-input__label Отчество
                                                .default-input__error
                                                    .error-text Ошибка
                                        .form__inputs-input
                                            .default-input
                                                input.default-input__input(type="email" required="" pattern="[A-Za-z0-9._%+-]+@[A-Za-z0-9.-]+\\.[A-Za-z]{1,63}$")
                                                label.default-input__label E-mail
                                                .default-input__error
                                                    .error-text Ошибка
                                        .form__inputs-input
                                            .default-input
                                                input.default-input__input.phone-input.default-input__input--error(type="tel" required="" pattern="\\+[0-9]\\s?[\\(][0-9]{3}[\\)]\\s?[0-9]{3}[-][0-9]{2}[-][0-9]{2}")
                                                label.default-input__label Телефон
                                                .default-input__error
                                                    .error-text Ошибка
                                        .form__inputs-input
                                            .default-input
                                                input.default-input__input(type="text" required="")
                                                label.default-input__label Город
                                                .default-input__error
                                                    .error-text Ошибка
                                        .form__inputs-input
                                            .default-input
                                                input.default-input__input(type="password" required="")
                                                label.default-input__label Пароль
                                                .default-input__error
                                                    .error-text Ошибка
                                        .form__inputs-input
                                            .default-input
                                                input.default-input__input(type="password" required="")
                                                label.default-input__label Подтверждение пароля
                                                .default-input__error
                                                    .error-text Ошибка
                                    .form__submit
                                        .form__submit-btn
                                            input.default-btn(type="submit" value="Зарегистрироваться")
                                        .form__submit-text Нажимая кнопку, Вы даете информированное 
                                            br
                                            |  согласие на 
                                            a(href="#") обработку своих персональных данных
                .inner-content__footer
                    include inc/footer.pug
        include inc/scripts.pug