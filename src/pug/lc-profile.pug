<!DOCTYPE html>
html(lang="ru")
    head
        meta(charset="utf-8")
        title Личный кабинет
        include inc/head.pug
        include inc/css.pug
    body.inner.loading.full-width-page
        include inc/header.pug
        main#content
            .inner-content
                .inner-content__title
                    include mixins/title-block.pug
                    +titleBLock(["Capitol", "Личный кабинет"], false)
                .inner-content__content
                    .lc
                        .lc__links
                            .lc-links
                                .lc-links__link
                                    a.lc-tab.active(href="#") Мой профиль
                                .lc-links__link
                                    a.lc-tab(href="#") wishlist
                                .lc-links__link
                                    a.lc-tab(href="#") Мои заказы
                                select
                                    option(value="0" selected="") Мой профиль
                                    option(value="1") wishlist
                                    option(value="2") Мои заказы
                        .lc__content
                            .lc-profile
                                .lc-profile__row
                                    .lc-profile__row-title Личные данные
                                    .lc-profile__row-content
                                        .lc-data
                                            form(action="#")
                                                .form__inputs.form__inputs--3
                                                    .form__inputs-input
                                                        .default-input
                                                            input.default-input__input(type="text" required="")
                                                            label.default-input__label ФИО
                                                            .default-input__error
                                                                .error-text Ошибка  
                                                    .form__inputs-input
                                                        .default-input
                                                            input.default-input__input.phone-input.default-input__input--error(type="tel" required="" pattern="\\+[0-9]\\s?[\\(][0-9]{3}[\\)]\\s?[0-9]{3}[-][0-9]{2}[-][0-9]{2}")
                                                            label.default-input__label Телефон
                                                            .default-input__error
                                                                .error-text Ошибка
                                                    .form__inputs-input
                                                        .default-input
                                                            input.default-input__input(type="email" required="" pattern="[A-Za-z0-9._%+-]+@[A-Za-z0-9.-]+\\.[A-Za-z]{1,63}$")
                                                            label.default-input__label E-mail
                                                            .default-input__error
                                                                .error-text Ошибка
                                                .form__submit
                                                    .form__submit-btn
                                                        input.default-btn(type="submit" value="Сохранить")
                                .lc-profile__row
                                    .lc-profile__row-title Адрес доставки
                                    .lc-profile__row-content
                                        .lc-address
                                            form(action="#")
                                                .form__inputs.form__inputs--2
                                                    .form__inputs-input
                                                        .default-input
                                                            select.default-input__input.default-input__input--select(tabindex="1")
                                                                option(value="0") Челябинск
                                                                option(value="1") Челябинс1
                                                                option(value="2") Челябинс2
                                                                option(value="3") Челябинс3
                                                            label.default-input__label Город
                                                            .default-input__error
                                                                .error-text Ошибка  
                                                    .form__inputs-input.form__inputs-input--2row
                                                        .default-input
                                                            textarea.default-input__input.default-input__input--textarea(placeholder="Напишите комментарий..." tabindex="3")
                                                            label.default-input__label Комментарии
                                                            .default-input__error
                                                                .error-text Ошибка
                                                    .form__inputs-input
                                                        .default-input
                                                            input.default-input__input(type="text" tabindex="2")
                                                            label.default-input__label Адрес
                                                            .default-input__error
                                                                .error-text Ошибка   
                                                .form__submit
                                                    .form__submit-btn
                                                        input.default-btn(type="submit" value="Сохранить")
                .inner-content__footer
                    include inc/footer.pug
        include inc/scripts.pug