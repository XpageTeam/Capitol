.burger
    display: flex
    flex-direction: column
    justify-content: space-between
    align-items: flex-end
    cursor: pointer
    padding: 15px
    margin: -15px
    size: 26px 19px
    box-sizing: content-box

    &:before, &:after
        content: ""
        display: inline-block

    span, &:before, &:after
        background: var(--main-color)
        height: 1px
        border-radius: 3px
        transition: width .3s ease

    &:after, span
        width: 100%

    &:before
        width: 15px

    &:hover, &:focus

        &:before
            width: 100%

    &.js__active

        &:before, &:after
            display: none

        span
            size: 100%
            background: none
            display: flex
            flex-direction: column
            justify-content: space-between

            &:before, &:after
                opacity: 1