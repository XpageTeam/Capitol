//     size: 23px 21px

// .cart-link
//     background: url("../img/ico-cart.svg") no-repeat
//     size: 19px 22px

.burger
    display: flex
    flex-direction: column
    justify-content: space-between
    align-items: flex-end
    cursor: pointer
    padding: 15px
    margin: -15px
    size: 26px 19px
    box-sizing: content-box

    &:before, &:after
        content: ""
        display: inline-block

    span, &:before, &:after
        background: var(--main-color)
        height: 1px
        border-radius: 3px
        transition: width .3s ease

    &:after, span
        width: 100%

    &:before
        width: 15px

    &:hover, &:focus

        &:before
            width: 100%

    &.js__active

        &:before, &:after
            display: none

        span
            size: 100%
            background: none
            display: flex
            flex-direction: column
            justify-content: space-between

            &:before, &:after
                opacity: 1

@media (min-width: 1700px)
    .head
        padding: em(78) var(--base-padding)

@media (max-width: 1700px) and (min-width: 1300px)
    .head
        padding: em(40) var(--base-padding)

@media (max-width: 1500px) and (min-width: 1300px)
    .h-menu

        &__item

            &:not(:last-child)
                margin-right: 35px

    .head

        &__links

            &:not(:last-child)
                margin-right: 80px

@media (max-width: 1300px)
    .h-menu

        &__item

            &:not(:last-child)
                margin-right: 28px

    .head
        padding: em(30) var(--base-padding)

        &__links

            &:not(:last-child)
                margin-right: 60px

@media (max-width: 1230px)
    .head

        &__menu
            opacity: 0
            pointer-events: none
            display: none

        &__wrap
            grid-template-columns: var(--catalog-cutch) 1fr 19px 250px auto 26px

@media (max-width: 660px)
    .head
        padding: 23px 20px

        &__wrap
            grid-template-areas: "logo links burger"
            grid-template-columns: 96px 1fr 26px
            gap: 30px

        &__links
            margin-right: 0 !important
            display: flex
            justify-content: center

        &__search, &__city
            display: none

    .h-links
        width: 95px
        gap: 17px

    .inner

        .head
            position: sticky
            background-color: var(--body-bg-color)
            top: 0
            border-bottom: 1px solid var(--border-color)
            z-index: 21