.head
    padding: em(78) var(--base-padding)

    &__wrap
        max-width: 1920px
        width: 100%
        margin-inline: auto
        align-items: center
        display: grid
        grid-template-columns: var(--catalog-cutch) auto 19px 1fr auto 26px
        grid-template-areas: "logo menu search city links burger"

    &__logo
        grid-area: logo

    &__menu
        grid-area: menu
        margin-right: 82px

    &__search
        grid-area: search

    &__city
        grid-area: city
        display: flex
        justify-content: center

    &__links
        grid-area: links

        &:not(:last-child)
            margin-right: 120px

    &__burger
        grid-area: burger

.logo
    display: block

    img
        display: block

.h-city
    position: relative

    select
        border: none
        padding-right: 15px
        cursor: pointer
        background: url("../img/ico-select-arrow.svg") right center no-repeat

        &.js__opened

            + .my-select__list-cont
                display: block

    .my-select

        &__list

            &-cont
                border-radius: 5px
                top: calc(100% + 10px)
                left: 50%
                right: auto
                transform: translateX(-50%)

.h-menu
    display: flex
    font-weight: 500

    &__item

        &:not(:last-child)
            margin-right: 65px

        &--submenu

            .h-menu

                &__link
                    position: relative
                    display: block
                    padding-right: 20px

                    &:after
                        content: ""
                        position: absolute calc(50% - 3px) 0 * *
                        transform: rotateZ(45deg)
                        size: 3px
                        border-right: 1px solid var(--main-color)
                        border-bottom: 1px solid var(--main-color)

    &__link

        &[data-title]

            &:before
                content: attr(data-title)
                display: inline-block
                margin: 0 14px 0 0
                font-weight: 400
                text-transform: capitalize
                color: #fff var(--main-color)
                font-size: em(12)
                border-radius: 4px
                padding: 2px 7px

.h-submenu
    display: none

.search-btn
    border: none
    padding: 0
    size: 19px
    background: url("../img/ico-search.svg") no-repeat

.h-links
    display: grid
    align-items: flex-end
    grid-template-columns: auto auto auto
    grid-template-areas: "lc favorite cart"
    gap: 25px

    &__lc
        grid-area: lc

    &__favorite
        grid-area: favorite

    &__cart
        grid-area: cart

.lc, .favorite, .cart
    
    &-link
        display: block
        background-size: contain !important

        svg
            display: block

.favorite, .cart

    &-link

        &[data-count]
            position: relative

            &:after
                content: attr(data-count)
                position: absolute -12px * * calc(100% + 2px)
                border-radius: 50%
                line-height: 1
                font-size: 12px
                font-weight: 500
                size: 20px
                color: #fff var(--main-color)
                display: flex
                justify-content: center
                align-items: center

