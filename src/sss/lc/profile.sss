.lc-profile

    &__row
        border-top: 1px solid var(--border-color)
        padding: 50px 0 65px

        &:last-child
            padding-bottom: 0

        &-title
            font-size: em(24)
            margin: 0 0 40px
            font-weight: 300

@media (max-width: 1300px)
    .lc-profile

        &__row
            padding: 30px 0

            &-title
                margin-bottom: 15px