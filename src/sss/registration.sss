.reg-form
    --input-vert-spacing: em(32)
    --input-hor-spacing: em(45)

.registration

    &__soc
        margin: 0 0 50px
        display: flex
        align-items: center

        &-text
            font-size: em(13)
            margin-left: 22px

        .soc

            &__link
                background-color: #fff
                border: none

                path
                    fill: var(--main-color)